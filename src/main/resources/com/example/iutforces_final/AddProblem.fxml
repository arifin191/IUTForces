      <TextField fx:id="id_field" layoutX="208.0" layoutY="194.0" prefHeight="27.0" prefWidth="210.0" />
      <Label layoutX="86.0" layoutY="199.0" text="Problem ID:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
