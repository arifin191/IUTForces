      <Button fx:id="output_btn" alignment="CENTER" contentDisplay="CENTER" layoutX="206.0" layoutY="141.0" mnemonicParsing="false" onAction="#chooseoutput" prefHeight="27.0" prefWidth="210.0" text="Add Output (*.txt)" />
      <Label layoutX="85.0" layoutY="234.0" text="Problem Name:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="86.0" layoutY="265.0" text="Time Limit:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <Label layoutX="88.0" layoutY="297.0" text="Memory Limit:" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="name_field" layoutX="208.0" layoutY="229.0" prefHeight="27.0" prefWidth="210.0" />
