<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../../../style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.iutforces_final.AddProblemController">
   <children>
      <Button fx:id="problem_btn" alignment="CENTER" contentDisplay="CENTER" layoutX="206.0" layoutY="62.0" mnemonicParsing="false" onAction="#chooseproblem" prefHeight="27.0" prefWidth="210.0" text="Choose Problem Statement(*.pdf)" />
